{
  "name": "jake-testing",
  "engines": {
    "node": "9.4.0"
  },
  "scripts": {
    "heroku-prebuild": "./tasks.sh build:all",
    "pretty": "find src -type f \\( -iname \\*.js -o -iname \\*.css \\) -and -not -path \"src/**/vendor/*\" | xargs prettier --write",
    "precommit": "lint-staged && ./tasks.sh test:all"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty"
    ]
  },
  "devDependencies": {
    "browserify": "16.1.0",
    "chromedriver": "2.36.0",
    "eslint": "4.17.0",
    "hashcat": "0.3.1",
    "husky": "0.14.3",
    "jake": "8.0.15",
    "karma": "2.0.0",
    "karma-commonjs": "1.0.0",
    "karma-mocha": "1.3.0",
    "lint-staged": "^7.0.4",
    "mocha": "5.0.0",
    "prettier": "1.11.1",
    "selenium-webdriver": "4.0.0-alpha.1",
    "shelljs": "0.8.1",
    "simplebuild-karma": "1.0.0"
  },
  "dependencies": {
    "procfile": "0.1.1",
    "send": "0.16.2"
  }
}
